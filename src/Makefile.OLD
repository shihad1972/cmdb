#
#
# Makefile for DNSA c programs
#
#

CC = gcc
RM = rm -f
CFLAGS = -ansi -std=c99 -pedantic -O0 -W -Wall -Wconversion -Wshadow -Wcast-qual -Wwrite-strings -Wunused -g -D_POSIX_C_SOURCE=200809L
CPPFLAGS = -I/usr/include/mysql
LDFLAGS = -L/usr/lib/mysql -L/usr/lib/x86_64-linux-gnu
PCLIBS = -lpcre
LIBS = -lmysqlclient $(PCLIBS) -lsqlite3
bin_programs = dnsa cmdb cbc cbcdomain cbcos cbcvarient cbcpart cpc

SOBJECTS = errors.o checks.o
COMOBJECTS = base_sql.o cbc_data.o cbc_base_sql.o cbc_common.o
DOBJECTS = dnsa.o dnsacom.o $(SOBJECTS) dnsa_net.o base_sql.o dnsa_base_sql.o zones.o
COBJECTS = cmdb.o cmdbcom.o $(SOBJECTS) servers.o customers.o cmdb_base_sql.o base_sql.o
BOBJECTS = cbc.o cbccom.o $(SOBJECTS) $(COMOBJECTS) build.o createbuild.o cbc_dnsa.o dnsa_base_sql.o dnsacom.o zones.o dnsa_net.o
CDOBJECTS = cbcdomain.o $(SOBJECTS) cbcnet.o $(COMOBJECTS) builddomain.o cbccom.o zones.o dnsacom.o dnsa_base_sql.o cbc_dnsa.o dnsa_net.o
COOBJECTS = cbcos.o $(SOBJECTS) $(COMOBJECTS) cbccom.o
CVOBJECTS = cbcvarient.o $(SOBJECTS) $(COMOBJECTS) cbccom.o
CKOBJECTS = cbcpart.o $(SOBJECTS) $(COMOBJECTS) cbccom.o
POBJECTS = cpc.c $(SOBJECTS)

COMHEADERS = cmdb.h cmdb_cbc.h cbc_data.h cbc_base_sql.h base_sql.h cbc_common.h
DHEADERS = cmdb_dnsa.h dnsa_base_sql.h base_sql.h cmdb.h checks.h
CHEADERS = cmdb_cmdb.h cmdb_base_sql.h base_sql.h cmdb.h checks.h
BHEADERS = $(COMHEADERS) checks.h build.h
CDHEADERS = $(COMHEADERS) builddomain.h cbc_dnsa.h cmdb_dnsa.h dnsa_base_sql.h
COHEADERS = $(COMHEADERS) cbcos.h
CVHEADERS = $(COMHEADERS) cbcvarient.h
CKHEADERS = $(COMHEADERS) cbcpart.h
PHEADERS = cmdb.h cmdb_cpc.h

all:	$(bin_programs)

dnsa:	$(DOBJECTS) $(DHEADERS)
	$(CC) $(CFLAGS) -o $@ $(DOBJECTS) $(LDFLAGS) $(LIBS)

cmdb:	$(COBJECTS) $(CHEADERS)
	$(CC) $(CFLAGS) -o $@ $(COBJECTS) $(LDFLAGS) $(LIBS)

cbc:	$(BOBJECTS) $(BHEADERS)
	$(CC) $(CFLAGS) -o $@ $(BOBJECTS) $(LDFLAGS) $(LIBS)

cbcdomain:	$(CDOBJECTS) $(CDHEADERS)
	$(CC) $(CFLAGS) -o $@ $(CDOBJECTS) $(LDFLAGS) $(LIBS)

cbcos:	$(COOBJECTS) $(COHEADERS)
	$(CC) $(CFLAGS) -o $@ $(COOBJECTS) $(LDFLAGS) $(LIBS)

cbcvarient:	$(CVOBJECTS) $(CVHEADERS)
	$(CC) $(CFLAGS) -o $@ $(CVOBJECTS) $(LDFLAGS) $(LIBS)

cbcpart:	$(CKOBJECTS) $(CKHEADERS)
	$(CC) $(CFLAGS) -o $@ $(CKOBJECTS) $(LDFLAGS) $(LIBS)

cpc:	$(POBJECTS) $(PHEADERS)
	$(CC) $(CFLAGS) -o $@ $(POBJECTS) $(PCLIBS)

.PHONY :	clean
clean :
	$(RM) *.o $(bin_programs)

