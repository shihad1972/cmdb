#
#
# Makefile for DNSA c programs
#
#
RM = rm -f
ECHO = echo
DIR = src
CLIENTDIR = client
LIBDIR = lib
SUBDIRS = lib src
mk_PROGRAMS = mkvm mksp
bin_PROGRAMS = dnsa cmdb cbc cbcdomain cbcos cbcvarient cbcpart cbcsysp cbcscript cbclocale $(mk_PROGRAMS)
lib_LIBRARIES = libailsacmdb.a libailsasql.a

all:	$(lib_LIBRARIES) $(bin_PROGRAMS)

libs:	$(lib_LIBRARIES)

mk:	$(mk_PROGRAMS)

$(lib_LIBRARIES):
	$(MAKE) -C $(LIBDIR) $@

$(bin_PROGRAMS):	$(lib_LIBRARIES)
	$(MAKE) -C $(DIR) $@

clean :
	for dir in $(SUBDIRS); do \
	  $(MAKE) -C $$dir clean; \
	done
